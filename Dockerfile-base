    xmlsec-dev \
    postgresql-dev \
    libffi-dev \
    jpeg-dev \
    geos-dev \
    gdal-dev \
    gcc \
    g++ \
    gettext

RUN pip install --no-cache-dir --upgrade \
    pip \
    pipenv


